<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:signup="clr-namespace:StatisticsWpfApp.Pages.SignUp"
             x:Class="StatisticsWpfApp.Pages.SignUp.SignUp">
    <ContentPage.BindingContext>
        <signup:SignUpViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Rejestracja" FontSize="20"/>
            <Label Text="Login"/>
            <Entry Text="{Binding Login}"/>
            <Label Text="Hasło"/>
            <Entry IsPassword="True" Text="{Binding Password}"/>
            <Button Text="Rejestracja" Command="{Binding SignUpCommand}"/>
            <Label Text="{Binding ErrorMessage}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>