<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:behaviors="http://xamarin.com/schemas/2020/toolkit" 
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="StatisticsWpfApp.Pages.ScanBookPreview.ScanBookPreviewPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <behaviors:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Podgląd zdjęcia" FontSize="20"/>
            <!--<Image Source="{Binding ImageArrayByte, Converter={StaticResource ByteArrayToImageSourceConverter}}"/>-->
            <ffimageloading:CachedImage Aspect="AspectFit" Source="{Binding ImageArrayByte, Converter={StaticResource ByteArrayToImageSourceConverter}}"/>

            <Button Text="Powrót" Command="{Binding CloseCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>